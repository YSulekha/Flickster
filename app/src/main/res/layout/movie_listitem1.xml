<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/color_white"
    app:cardElevation="4dp"
    app:cardCornerRadius="6dp"
    android:layout_margin = "@dimen/keyline_margin">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:id="@+id/list_profile"
            android:scaleType="fitXY"
            android:src = "@mipmap/ic_launcher"
            android:minWidth="180dp"
            android:layout_alignParentTop="true" />
        <TextView
            android:text="TextView"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_profile"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:id="@+id/list_title"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/overview_height"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/list_profile"
            android:maxLines="@integer/num_lines"
            android:ellipsize="end"
            android:layout_below="@id/list_title"
            android:minHeight="@dimen/overview_height"
            android:id="@+id/list_overview"
            style="?android:attr/textAppearanceMedium"
            android:fontFamily="sans-serif"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>