<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/frame"
        android:onClick="onClickPic">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/detail_ImageView"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_play_circle_outline_red_300_24dp"
            android:layout_gravity="center"/>
    </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame"
        android:text="dsfsdfcc"
        android:textSize="16sp"
        android:typeface="normal"
        android:id="@+id/detail_release_date"
        android:fontFamily="sans-serif"
        android:paddingTop="10dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:freezesText="true"

        />
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_ratingBar"
        android:layout_centerInParent="true"
        android:isIndicator="true"
        android:stepSize=".1"
        android:numStars="5"
        android:rating="3.65"
        android:mirrorForRtl="false"
        android:theme="@style/RatingBar"
        android:layout_below="@+id/detail_release_date"
        android:outlineProvider="background" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:layout_below="@id/detail_ratingBar"
        android:id="@+id/detail_overview"
        android:textIsSelectable="true"
        android:outlineProvider="background"
        android:fontFamily="sans-serif"
        android:padding="16dp"
        android:textColor="@android:color/black"
        style="?android:attr/textAppearanceMedium"

        />


</RelativeLayout>
</ScrollView>