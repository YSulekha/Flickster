<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/color_white"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="6dp"
    android:layout_margin = "@dimen/keyline_margin">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative"
    android:layout_margin="8dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/list_profile"
        android:scaleType="fitXY"
        android:layout_alignBottom="@id/list_overview"
        android:layout_alignTop="@id/list_title"
        android:src = "@mipmap/ic_launcher"
        android:minWidth="200dp"
        android:minHeight="200dp"
        android:layout_alignParentRight="true" />
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_profile"
        android:layout_marginRight="8dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:id="@+id/list_title"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/overview_height"
        android:layout_marginRight="8dp"
        android:minHeight="@dimen/overview_height"
        android:maxLines="@integer/num_lines"
        android:ellipsize="end"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/list_profile"
        android:layout_below="@id/list_title"
        android:gravity="center_vertical"
        android:id="@+id/list_overview"
        style="?android:attr/textAppearanceMedium"
        android:fontFamily="sans-serif"
        />

</RelativeLayout>
    </android.support.v7.widget.CardView>